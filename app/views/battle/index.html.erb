.modal {
  display: none; 
  position: fixed; 
  z-index: 1; 
  left: 0;
  top: 0;
  width: 100%; 
  height: 100vh; 
  overflow: hidden; 
  background-color: rgb(0,0,0); 
  background-color: rgba(0,0,0,0.4); 

}


.modal-content {
  background-color: #F6F6F6;
  padding: 20px;
  border: 1px solid #888;
  width: 80%; 
  position: fixed;
  top: 50%;
  left: 50%;
  translate: -50% -50%;
  overflow-y: auto;
  max-height: 80vh;
  border-radius: 10px;
}

.modal-content::-webkit-scrollbar {
  width: 10px;
}

.modal-content::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

.modal-content::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 4px;
}

.modal-content::-webkit-scrollbar-thumb:hover {
  background: #555;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

.openModal {
    margin-top: 20px;
    background: #0A265D;
    height: 7vh;
